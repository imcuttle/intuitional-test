{
  "packages": ["packages/*"],
  "version": "0.0.2",
  "command": {
    "publish": {
      "conventionalCommits": true,
      "message": "chore(release): publish %s"
    },
    "bootstrap": {
      "hoist": ["jest", "documentation"],
      "npmClientArgs": []
    }
  },
  "ignoreChanges": ["**/__fixtures__/**", "**/__tests__/**"]
}
